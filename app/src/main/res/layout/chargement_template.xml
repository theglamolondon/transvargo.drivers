<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_goneMarginBottom="15dp">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/liste_apparence" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/truck"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/delivery512"/>
        <TextView
            android:id="@+id/section_label"
            android:text="Chargement en attente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_h1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/truck" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_chrgmt_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="lkddjk  lklsjjk lklksdjds sddsklk kjsdjdksd ksd ks"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/txt_chrgmt_datechargement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="#555"
                android:text="12/08/2017"
                android:textAlignment="center"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:text=">"
            android:textSize="70sp"
            android:textAlignment="center"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_chrgmt_arrivee"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="lkddjk  lklsjjk lklksdjds sddsklk kjsdjdksd ksd ks"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:textColor="#333"/>

            <TextView
                android:id="@+id/txt_chrgmt_dateexpiration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="#777"
                android:text="22/08/2017"
                android:textAlignment="center"
                android:layout_marginTop="9dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>

