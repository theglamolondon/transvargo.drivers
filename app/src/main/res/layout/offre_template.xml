<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/liste_apparence"
        android:id="@+id/lLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_offre_datechargement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_normal"
                        android:text="23/05/2017"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_offre_start"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/gmap_marker_active"/>

                        <TextView
                            android:id="@+id/txt_offre_lieudepart"
                            android:layout_toEndOf="@id/img_offre_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="7dp"
                            android:textSize="@dimen/text_normal"
                            android:text="Koumassi remblais, Abidjan, Région Lagune, Côte d'Ivoire"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_offre_dateexpiration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/text_normal"
                        android:text="14/06/2017"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_offre_end"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:src="@drawable/gmap_marker"/>

                        <TextView
                            android:id="@+id/txt_offre_lieuarrivee"
                            android:layout_toEndOf="@id/img_offre_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="7dp"
                            android:textSize="@dimen/text_normal"
                            android:text="France Amérique 2, Bouaké, Région du Gbêkè, Côte d'Ivoire"/>


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/text_normal">

            <TextView
                android:id="@+id/txt_offre_prix"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="130 000 FCFA"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/button"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/txt_offre_delais"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#F00"
                android:text="Expire dans 3 jours"
                android:textSize="@dimen/text_normal"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/text_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Distance"
                    android:textSize="@dimen/text_normal"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_offre_distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="130 km"
                    android:textSize="@dimen/text_normal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Masse"
                    android:textSize="@dimen/text_normal"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_offre_masse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1500 kg"
                    android:textSize="@dimen/text_normal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Fragile"
                    android:textSize="@dimen/text_normal"
                    android:textAlignment="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_offre_fragile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="non"
                    android:textSize="@dimen/text_normal"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>